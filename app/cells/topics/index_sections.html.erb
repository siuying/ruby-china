<div id="sections" class="box">
    <h2><%= t("common.index_node_navigation")%></h2>
    <ul>
        <% @sections.each do |section| %>
        <li>
            <label><%= section.name %></label>
            <% section.nodes.each do |node| %>
                <%= link_to(node.name, node_topics_path(node), :title => node.name )%>
            <% end %>
        </li>
        <% end %>
    </ul>
</div>