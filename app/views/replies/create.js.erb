<% if @reply.errors.blank? %>
  if($("#replies").length == 0){
    location.href = location.href;
  }
  else {
    $("#replies").append('<%= escape_javascript(render("reply", :item => @reply, :i => @topic.replies_count - 1)) %>');
    Topics.replyCallback(1,'<%= escape_javascript(@msg) %>');
  }
<% else %>
  Topics.replyCallback(0,'<%= escape_javascript(@msg) %>');
<% end %>
